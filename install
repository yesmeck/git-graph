#!/usr/bin/env bash
# vim: set ft=sh :
#
# Git Graph installation script
#
# Author: yesmeck@gmail.com
#
# License: MIT
#


database=$HOME/.git-graph/data

if [[ -f $database  ]]; then
  echo "${database} exits."
  exit 1
fi

cat <<EOF | sqlite3 $database
  CREATE TABLE commits(id INTEGER PRIMARY KEY, location TEXT, created_at TEXT);
EOF

